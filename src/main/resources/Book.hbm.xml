<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.qxq.myapp.Entity.Book" table="BookList">
        <id column="id" name="book_id" type="int" />
        <property column="name" name="book_name" type="string" />
        <property column="author" name="book_author" type="string" />
        <property column="number" name="book_number" type="int" />
    </class>
</hibernate-mapping>